# -*- encoding: utf-8 -*-
Gem::Specification.new do |s|
  s.name        = "<%= @name %>"
  s.version     = "0.0.1"
  s.authors     = ["<%= user_name %>"]
  s.email       = ["<%= user_email %>"]
  s.homepage    = "Insert homepage here (e.g. Github repository URL)"
  s.summary     = "Insert summary here"
  s.description = "Insert description here"

  s.files         = `git ls-files`.split($\)
  s.test_files    = s.files.grep(%r{^(test|spec|features)/})
  s.require_paths = ["lib"]

  # Add runtime dependencies here, like this:
  # s.add_dependency 'bubble-wrap'
  
  # Add development dependencies here, like this:
  s.add_development_dependency 'rake'
end
